    <link rel="stylesheet" href="/css/index/footer.css" />
    <link rel="stylesheet" type="text/css" href="/css/index/navbar.css" />
    <link rel="stylesheet" href="/css/index/flashMessage.css">

    <title>DSC NITS | Login/SignUp</title>
</head>

<body>
    <!--Navbar Starts-->
    <%-include('partials/navbar')%>
        <!---Navbar Ends-->

        <!-- Flash Message Body Start -->
        <%-include('partials/flashMessage')%>
            <!-- Flash Message body end -->

            <div class="container" id="container">
                <div class="heading-block" style="width:45% !important;">
                    <h1 id="label">
                        SignUp
                        <span style="color: #0f1923"></span>
                    </h1>
                </div>
                <div class="signup-form" id="signupform">
                    <h1 class="mobileheading">Sign Up</h1>
                    <form action="/user/register" method="POST" onsubmit="return validate()" name="signupform" id="signupform">
                        <label for="codename">Full name</label
          ><input
            type="text"
            name="name"
            placeholder="Name"
            required
            minlength="1"
            maxlength="30"
            id="name"
          />

          <label for="hname">Username</label>

                        <input id="hname" type="text" placeholder="Username" name="dscHandle" required maxlength="20" onchange="return checkuniquedschandle()" />
                        <h6 style="margin-top: -20px;margin-bottom: 10px;"> Username cannot be longer than 20 characters</h6>
                        <p id="uniqueness"></p>

                        <label for="email">Email</label
          ><input
            pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"
            type="email"
            name="email"
            placeholder="Email Address"
            required
          />
          <label for="sidearm">Password</label>
                        <input type="password" id="password" type="password" name="password" placeholder="Password" required />

                        <label for="sidearm">Confirm Password</label>
                        <input type="password" id="cpassword" type="password" name="cpassword" placeholder="Retype Password" required />
                        <br />
                        <div class="flexRow" style="
              display: flex;
              align-items: center;
              height: auto;
              margin: -18px;
              padding: 0;
              padding-left: 20px;
            ">
                            <input onclick="showpasswordsignup()" type="checkbox" style="width: auto; margin: 0" />&nbsp&nbsp Show Password
                        </div>
                        <div>
                            <center>
                                <div class="button-box" id="btn-1">
                                    <div class="button-mask button-mask-slide" style="padding: 0">
                                        <input type="submit" value="SignUp" id="" style="padding: 20px" onclick="ValidateEmail(document.signupform.text1)" />
                                    </div>
                                </div>
                                <br><br> Already have an account ?

                                <div class="button-mask button-mask-slide" id="switchtologin" style="cursor: pointer; display: inline-block;"> Login</div>

                            </center>
                        </div>




                    </form>

                    <!-- <p>
          <a href="/user/forgotpassword">Forget Password ?</a><br /><br />
          or use social account
        </p> -->

                    <!-- <div class="social-login">
          <a href="#">
            <img src="/img/logo/fb.png" class="social_logo" alt="facebook logo" />
            Signup with facebook
          </a>
          <a href="#">
            <img src="/img/logo/Google.png" class="social_logo" alt="google logo" />
            Signup with Google
          </a>
        </div> -->
                </div>

                <div class="signup-form" id="loginform">
                    <h1 class="mobileheading">Login</h1>
                    <form action="/user/login" method="POST" id="login-form">
                        <label for="email">Email/Username</label
          ><input
            type="text"
            name="email"
            placeholder="Email/Username"
            required
          />
          <label for="sidearm">Password</label>
                        <input type="password" id="loginpassword" type="password" name="password" placeholder="Password" required />
                        <br />
                        <div class="flexRow" style="
              display: flex;
              align-items: center;
              height: auto;
              margin: -18px;
            ">
                            <input onclick="showpasswordlogin()" type="checkbox" style="width: auto; margin: 0" />&nbsp&nbsp Show Password
                        </div>
                        <div>
                            <center>
                                <div class="button-box" id="btn-1">
                                    <div class="button-mask button-mask-slide" style="padding: 0; ">
                                        <input type="submit" value="Login" id="" style="padding: 20px" />
                                    </div>
                                </div>
                                <br><br>Don't have an account ?
                                <div class="button-mask button-mask-slide" id="switchtosignup" style="display: inline-block; cursor: pointer;">SignUp
                                </div>
                            </center>


                        </div>
                    </form>

                    <p>
                        <a href="/user/forgotpassword" style="color: #0f1923; text-decoration: none; ">Forgot Password ?</a><br />

                    </p>

                    <!-- <div class="social-login">
          <a href="#">
            <img src="/img/logo/fb.png" class="social_logo" alt="facebook logo" />
            Login with facebook
          </a>
          <a href="#">
            <img src="/img/logo/Google.png" class="social_logo" alt="google logo" />
            Login with Google
          </a>
        </div> -->
                </div>
            </div>
            <%-include('partials/footer')%>
</body>
