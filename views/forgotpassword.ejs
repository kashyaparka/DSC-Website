    <link rel="stylesheet" href="/css/register/register.css" />
    <link rel="stylesheet" href="/css/register/forgotpassword.css" />
    <title>DSC NITS | Forgot Password</title>
    <link
    rel="shortcut icon"
    type="image/x-icon"
    href="/img/logo/TransDSC.png"
  />
</head>

<body>
    <!--Navbar Starts-->
    <%-include('partials/navbar')%>
        <!---Navbar Ends-->
        <div class="container forgot" id="container">
            <div class="heading-block">
                <div>
                    <h1 id="label">
                        Forgot Password
                        <span style="color: #0f1923"></span>
                    </h1>
                </div>
            </div>
            <div class="signup-form">
                <h1 class="mobileheading">Forgot Password</h1>
                <form action="/user/forgotpassword" method="POST" id="login-form">
                    <label for="email">Email</label
          ><input
            type="email"
            name="email"
            placeholder="Enter your Email Address"
            required
          />
          <div class="buttons-button-box" style="padding: 0; flex-direction: column;">
          <center>
            <br>
            <div class="button-box" style="width: 70%;">
              <div class="button-mask button-mask-slide">
                <input type="submit" value="Reset Password" id="" />
              </div>
            </div>
          </center>
          <center>
            
              <div class="button-mask button-mask-slide" id="switchtosignup">
                <a
                  style="text-decoration: none; color: inherit"
                  href="/user/register"
                  ><span>Don't have an account ? SignUp</span></a
                >
              </div>
          </center>

          
          </div>
        </form>

        <!-- <p>or use social account</p> -->

        <!-- <div class="social-login">
          <a href="#">
